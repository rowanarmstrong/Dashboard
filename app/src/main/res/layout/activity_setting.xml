<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <TextView
        android:textSize="18.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5.0dip"
        android:text="Please enter your weight(kg): " />

    <TextView
        android:textSize="18.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="100.0dip"
        android:text="Please enter an emergency contact number: " />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60.0dip"
        android:layout_marginTop="40.0dip"
        android:hint="default weight is 60kg"
        android:layout_weight="1.0" />

    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60.0dip"
        android:layout_marginTop="140.0dip"
        android:hint="default number is 111"
        android:layout_weight="1.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="50.0dip"
        android:text="Complete"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="Complete" />

</RelativeLayout>